{
  "privileges": [
    {
      "name": "WebAccess",
      "essential": true,
      "parameters": [ "http://*.virtualearth.net" ]
    },
    {
      "name": "LocalStorage",
      "essential": false,
      "parameters": []
    }
  ],
  "dataRoles": [
    {
      "name": "Location",
      "kind": "Grouping",
      "displayName": "Location",
      "displayNameKey": "Role_DisplayName_Location",
      "preferredTypes": [
        {
          "geography": {
            "address": true
          }
        },
        {
          "geography": {
            "city": true
          }
        },
        {
          "geography": {
            "continent": true
          }
        },
        {
          "geography": {
            "country": true
          }
        },
        {
          "geography": {
            "county": true
          }
        },
        {
          "geography": {
            "place": true
          }
        },
        {
          "geography": {
            "postalCode": true
          }
        },
        {
          "geography": {
            "region": true
          }
        },
        {
          "geography": {
            "stateOrProvince": true
          }
        }
      ]
    },
    {
      "name": "X",
      "kind": "Grouping",
      "displayName": "Longitude",
      "displayNameKey": "Role_DisplayName_Longitude",
      "description": "Overrides the longitude of locations",
      "descriptionKey": "Role_Description_DisplayName_Longitude",
      "requiredTypes": [
        {
          "geography": {
            "longitude": true
          }
        },
        {
          "numeric": true
        },
        {
          "integer": true
        }
      ]
    },
    {
      "name": "Y",
      "kind": "Grouping",
      "displayName": "Latitude",
      "displayNameKey": "Role_DisplayName_Latitude",
      "description": "Overrides the latitude of locations",
      "descriptionKey": "Role_Description_DisplayName_Latitude",
      "requiredTypes": [
        {
          "geography": {
            "latitude": true
          }
        },
        {
          "numeric": true
        },
        {
          "integer": true
        }
      ]
    },
    {
      "name": "Height",
      "kind": "Measure",
      "displayName": "Bar Height",
      "displayNameKey": "Role_DisplayName_BarHeight"
    },
    {
      "name": "Heat",
      "kind": "Measure",
      "displayName": "Heat Intensity",
      "displayNameKey": "Role_DisplayName_HeatIntensity"
    }
  ],
  "dataViewMappings": [
    {
      "conditions": [
        {
          "Location": {
            "min": 1,
            "max": 1
          },
          "X": {
            "max": 1
          },
          "Y": {
            "max": 1
          },
          "Height": {
            "max": 1
          },
          "Heat": {
            "max": 1
          }
        }
      ],
      "categorical": {
        "categories": {
          "select": [
            { "bind": { "to": "Location" } }
           ],
           "dataReductionAlgorithm": {
             "top": {}
           }
        },
        "values": {

            "select": [
              {
                "for": {
                  "in": "Height"
                }
              },
              {
                "for": {
                  "in": "Heat"
                }
              }
            ],
            "dataReductionAlgorithm": {
              "top": {}
            }
          }
        }
      
    },
    {
      "conditions": [
        {
          "Location": {
            "max": 0
          },
          "X": {
            "max": 1
          },
          "Y": {
            "max": 1
          },
          "Height": {
            "max": 1
          },
          "Heat": {
            "max": 1
          }
        }
      ],
      "categorical": {
        "categories": {
         "select": [
           { "bind": { "to": "X" } },
           { "bind": { "to": "Y" } }
          ],
          "dataReductionAlgorithm": {
            "top": {}
          }
        },
        "values": {
            "select": [
              {
                "for": {
                  "in": "Height"
                }
              },
              {
                "for": {
                  "in": "Heat"
                }
              }
            ],
            "dataReductionAlgorithm": {
              "top": {}
            }
        }
      }
    }
  ],
  "objects": {
    "dataPoint": {
      "properties": {
        "defaultColor": {
          "type": {
            "fill": {
              "solid": {
                "color": true
              }
            }
          }
        }
      }
    }
  },
  "sorting": {
    "custom": {}
  },
  "supportsKeyboardFocus": true,
  "supportsMultiVisualSelection": true
}